<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<GridPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.MainController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="아이디">
         <padding>
            <Insets left="100.0" />
         </padding>
      </Label>
      <Label text="비밀번호" GridPane.rowIndex="1">
         <padding>
            <Insets left="100.0" />
         </padding>
      </Label>
      <Label text="비밀번호 확인" GridPane.rowIndex="2">
         <padding>
            <Insets left="100.0" />
         </padding>
      </Label>
      <Label text="이름" GridPane.rowIndex="3">
         <padding>
            <Insets left="100.0" />
         </padding>
      </Label>
      <Label text="이메일" GridPane.rowIndex="4">
         <padding>
            <Insets left="100.0" />
         </padding>
      </Label>
      <TextField fx:id="tfNewId" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets right="100.0" />
         </GridPane.margin>
      </TextField>
      <TextField fx:id="tfname"  GridPane.columnIndex="1" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets right="100.0" />
         </GridPane.margin>
      </TextField>
      <TextField fx:id="tfemail" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets right="100.0" />
         </GridPane.margin>
      </TextField>
      <PasswordField fx:id="pfSetpw" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets right="100.0" />
         </GridPane.margin>
      </PasswordField>
      <PasswordField fx:id="pfSetpw2" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets right="100.0" />
         </GridPane.margin>
      </PasswordField>
      <Button fx:id="btnSignUp" onAction="#SignUpAction" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" scaleY="1.5" text="회원가입" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets left="200.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="btnPrevPage" onAction="#btnPrevPageAction" mnemonicParsing="false" scaleY="1.5" text="이전 페이지로" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
      </Button>
   </children>
</GridPane>

